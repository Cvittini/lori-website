{
    "kind": "collectionType",
    "collectionName": "blog_posts",
    "info": {
        "singularName": "blog-post",
        "pluralName": "blog-posts",
        "displayName": "Blog Post"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string"
        },
        "slug": {
            "type": "uid"
        },
        "excerpt": {
            "type": "text"
        },
        "coverImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "gallery": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "video": {
            "type": "component",
            "component": "video.media-video",
            "repeatable": false
        },
        "content": {
            "type": "richtext"
        },
        "seo": {
            "type": "component",
            "component": "seo.shared-component",
            "repeatable": false
        }
    }
}
