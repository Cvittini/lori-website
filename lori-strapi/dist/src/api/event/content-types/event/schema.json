{
    "kind": "collectionType",
    "collectionName": "events",
    "info": {
        "singularName": "event",
        "pluralName": "events",
        "displayName": "Event"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string"
        },
        "slug": {
            "type": "uid",
            "targetField": "title"
        },
        "date": {
            "type": "date"
        },
        "startTime": {
            "type": "time"
        },
        "location": {
            "type": "string"
        },
        "price": {
            "type": "decimal"
        },
        "description": {
            "type": "richtext"
        },
        "bannerImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "gallery": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "isFeatured": {
            "type": "boolean",
            "default": false
        },
        "tags": {
            "type": "string"
        },
        "seo": {
            "type": "component",
            "component": "seo.shared-seo",
            "repeatable": false
        }
    }
}
